@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">

    <!-- HERO SECTION -->
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h1 class="display-5 fw-bold">
                Welcome to <span class="text-primary">BlogApp</span>
            </h1>

            <p class="lead text-muted mt-3">
                Share your thoughts, read inspiring stories,
                and explore ideas from writers around the world.
            </p>

            <div class="mt-4">
                @if (!User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Auth" asp-action="Register"
                       class="btn btn-primary btn-lg me-2">
                        Get Started
                    </a>

                    <a asp-controller="Auth" asp-action="Login"
                       class="btn btn-outline-secondary btn-lg">
                        Login
                    </a>
                }
                else
                {
                    <a asp-controller="Post" asp-action="Create"
                       class="btn btn-success btn-lg">
                        Write Your First Post
                    </a>
                }
            </div>
        </div>

        <div class="col-md-6 text-center d-none d-md-block">
            <img src="~/images/download.png"
                 class="img-fluid"
                 alt="Blog Illustration">
        </div>
    </div>

    <!-- FEATURES SECTION -->
    <div class="row text-center g-4">

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-pencil-square display-4 text-primary"></i>
                    <h5 class="mt-3 fw-semibold">Write Freely</h5>
                    <p class="text-muted">
                        Express your ideas with a clean and simple editor.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-people-fill display-4 text-primary"></i>
                    <h5 class="mt-3 fw-semibold">Connect</h5>
                    <p class="text-muted">
                        Read posts from others and grow together.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-shield-lock-fill display-4 text-primary"></i>
                    <h5 class="mt-3 fw-semibold">Secure</h5>
                    <p class="text-muted">
                        Your content is protected with secure authentication.
                    </p>
                </div>
            </div>
        </div>

    </div>

</div>
