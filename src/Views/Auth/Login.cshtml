@model BlogApp.ViewModel.LoginViewModel

@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_Layout.cshtml"; // change if you use another layout
}

<div class="container d-flex justify-content-center align-items-center" style="min-height:80vh;">
	<div class="col-md-5">
		<div class="card shadow-lg border-0 rounded-3">
			<div class="card-header bg-primary text-white text-center">
				<h4 class="mb-0">Welcome Back</h4>
				<small>Login to your account</small>
			</div>

			<div class="card-body p-4">
				<form asp-controller="Auth" asp-action="Login" method="post">

					<!-- Validation Summary -->
					<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

					<!-- Email -->
					<div class="mb-3">
						<label asp-for="Email" class="form-label fw-semibold"></label>
						<input asp-for="Email" class="form-control" placeholder="Enter your email" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>

					<!-- Password -->
					<div class="mb-3">
						<label asp-for="Password" class="form-label fw-semibold"></label>
						<input asp-for="Password" class="form-control" placeholder="Enter your password" />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>

					<!-- Button -->
					<div class="d-grid mt-4">
						<button type="submit" class="btn btn-primary btn-lg">
							<i class="bi bi-box-arrow-in-right"></i> Login
						</button>
					</div>
				</form>
			</div>

			<div class="card-footer text-center bg-light">
				<small>
					Don’t have an account?
					<a asp-action="Register" asp-controller="Auth" class="text-decoration-none fw-semibold">
						Register here
					</a>
				</small>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
